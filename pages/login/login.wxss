/* pages/login/login.wxss */

.recommend-login {
  justify-content: center;
  font-size: 26rpx;
  margin: 50rpx;
}

.recommend-login text {
  margin: 0 30rpx;
}

.line {
  width: 210rpx;
  height: 1px;
  background: #ddd;
}

 button {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  background-color: rgb(0, 201, 89);
  color: #fff;
  margin-bottom: 80rpx;
}

.auth-box {
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.3);
}

.content-box {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  border-radius: 16rpx;
  background: #fff;
  text-align: center;
}
.title,.content {
  height: 80rpx;
  line-height: 80rpx;
}

.auth-btn-box {
  height: 90rpx;
  justify-content: center;
}

.auth-btn-box button {
  border-radius: 0;
  background: #fff;
  color: #0f0;
  padding: 0;
  margin-top: 80rpx;
}

.auth-btn-box .cancel {
  color: #555;
  border-bottom-left-radius: 16rpx;
}

.auth-btn-box .comfrim {
  border-bottom-right-radius: 16rpx;
}
