/* pages/login/phone/phone.wxss */
.phone-box {
  padding: 50rpx;
}

.title {
  font-size: 36rpx;
  padding-bottom: 80rpx;
}

.phone {
  width: 100%;
  border-bottom: 1px solid #ddd;
  padding: 30rpx 0;
}

.send-code {
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
  padding: 30rpx 0;
}

.send {
  color: #888;
  padding: 0;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 0;
}

.btn-login {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 20rpx;
  background-color: rgb(0, 201, 89);
  color: #fff;
  margin-bottom: 80rpx;
  margin-top: 50rpx;
}

.tips {
  color: #aaa;
  font-size: 22rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 40rpx;
}