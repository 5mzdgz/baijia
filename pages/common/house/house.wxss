

.recommend-box {
  margin-top: 50rpx;
  padding: 0 40rpx;
}

.recommend-box .title-box {
  width: 100%;
  justify-content: space-between;
  margin-bottom: 25rpx;
}

.recommend-box .title-box .label-sub {
  font-size: 26rpx;
  color: #aaa;
}

.recommend-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 35rpx;
  border-bottom: 1px solid #ddd;
}

.recommend-item image {
  width: 200rpx;
  height: 154rpx;
  margin-right: 25rpx;
  border-radius: 8rpx;
}

.recommend-info {
  width: 70%;
  text-align: left;
}

.recommend-info .title {
  justify-content: space-between;
}


.recommend-info .title .left{
  font-size: 30rpx;
  font-weight: 700;
}

.recommend-info .title .right {
  font-size: 22rpx;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  background: linear-gradient(#bfe8f5, #41b3e0);
}

.recommend-info .address {
  height: 32rpx;
  font-size: 26rpx;
  color: #aaa;
}

.recommend-info .attr {
  font-size: 22rpx;
  color: #666;
  justify-content: flex-start;
}

.recommend-info .attr-item {
  padding: 3rpx 5rpx;
  background-color: rgb(236, 240, 243);
  margin-right: 10rpx;
  border-radius: 5rpx;
}

.recommend-info .price {
  color: rgb(255, 85, 0);
  font-size: 28rpx;
  font-weight: 600;
}

.pd-btm {
  margin-bottom: 15rpx;
}